  <tbody>
    <% @lists.each do |list| %>
      <% if list.compleated %>
        <tr class="table-secondary">
          <td class="striker"><%= link_to list.discription, edit_list_path(list) %></td>
          <td>

              <%= form_for(list) do |f| %>
              <%= f.text_field :discription, type: 'hidden' %>
              <%= f.check_box :compleated, :checked => false, :style => 'visibility: hidden'  %>
              <%= f.submit "Uncross", class: 'btn btn-outline-secondary btn-sm'  %>
              <% end %>

          </td>
          <td><%= link_to 'Delete', list, class: 'btn btn-outline-danger btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% else %>
        <tr>
          <td><%= link_to list.discription, edit_list_path(list) %></td>
          <td>
              <%= form_for(list) do |f| %>
                <%= f.text_field :discription, type: 'hidden' %>
                <%= f.check_box :compleated, :checked => true, :style => 'visibility: hidden'  %>
                <%= f.submit "Cross Off", class: 'btn btn-outline-secondary btn-sm'  %>
              <% end %>
          </td>
          <td><%= link_to 'Delete', list, class: 'btn btn-outline-danger btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

